{
  "compilerOptions": {
    "target": "ES2019",
    "module": "es6",
    "moduleResolution": "node",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/**/*"
  ]
}
